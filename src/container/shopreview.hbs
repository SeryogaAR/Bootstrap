<main class="p-3">

  <div class="card">
    {{#with navigation}}
    <div class="nav">
      {{#each links}}
      <div class="nav-item">
        <a href="{{href}}" class="nav-link">{{text}}</a>
      </div>
      {{/each}}
    </div>
    {{/with}}
  </div>

  <div class="row">
    {{#with formBlock}}
    <div class="col-8">

      <h2>{{header}}</h2>
      {{#with rating}}
      <p>{{title}}: {{value}}</p>
      {{/with}}
      {{#with actionBlock}}
      <ul class="nav nav-tabs">
        {{#each tabs}}
        <li class="nav-item">

          {{#if isActive}} <a class="nav-link active" aria-current="page">{{text}}</a>{{else}} <a class="nav-link"
            aria-current="page">{{text}}</a> {{/if}}

        </li>
        {{/each}}
      </ul>


      <hr>

      {{#with report}}
      <div class="card">
        <h4>{{title}}</h4>
        <div>
          {{#with button}}
          <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
          {{/with}}
        </div>
      </div>
      {{/with}}



      {{/with}}

      <hr>

      {{#with feedbackBlock}}
      <h2>{{title}}</h2>

      <div>
        {{#each buttons}}
        {{#if isWarning}} <a class="btn btn-warning" href="link">{{text}}</a>
        {{else isSuccess}} <a class="btn btn-success" href="link">{{text}}</a>
        {{else isDanger}} <a class="btn btn-danger" href="link">{{text}}</a>
        {{/if}}
        {{/each}}
      </div>


      {{/with}}

      <hr>


    </div>

    {{#with goodsInfo}}

    <div class="col-4">

      <div class="card">

        <div><img src="{{photo}}" class="p-3"></div>
        <p class="p-3">{{name}}</p>

      </div>
      <div class="card">
        <p class="p-3">{{price}}</p>
        {{#if inMarket}}<p>Є в наявності</p>{{else}}<p>Не має в наявності</p>{{/if}}

        {{#each buttons}}
        <div>

          {{#if isPrimary}}<a class="btn btn-primary" href="{{link}}">{{text}}</a>
          {{else isSecondary}} <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
          {{/if}}

        </div>

        {{/each}}
      </div>

      <div class="card">
        {{#with seller}}
        <p>{{title}}: {{value}}</p>
        {{/with}}

      </div>

    </div>

    {{/with}}

    {{/with}}
  </div>

  {{#each reviewList}}

  {{> reviewItem}}

  {{/each}}
  <hr>
  {{#with service}}
  <div class="card">
    <div class="card-body text-bg-success text-center">
      <h2>{{title}}</h2>
      <p>{{description}}</p>
      {{#each buttons}}
      <a class="btn btn-primary" href="{{link}}">{{text}}</a>
      {{/each}}
    </div>
  </div>
  {{/with}}



  <hr>
  <div class="row">
    {{#each footer}}
    <div class="nav flex-column col-2">
      {{#each this}}
      <div class="nav-item">
        {{#if @last}}<a href="{{link}}" class="nav-link disabled">{{text}}</a>{{else}}<a href="{{link}}"
          class="nav-link">{{text}}</a>{{/if}}
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>
</main>