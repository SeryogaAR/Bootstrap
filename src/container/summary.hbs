{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-2">
    {{#with main}}
    <main>

        <section class="m-2">
            {{> title data=summary.title big=true}}
            <div>
                <p>
                    {{summary.text}}
                </p>
            </div>
        </section>
        {{#with experience}}
        <section class="m-2">
            {{> title data=title big=false}}
            <div>
                <p>
                    {{text}}
                </p>
            </div>
        </section>
        {{/with}}
    </main>
    {{/with}}


</div>

