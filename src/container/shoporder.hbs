<main class="p-1">

  <div class="card">
    {{#with navigation}}
    <div class="nav">
      {{#each links}}
      <div class="nav-item">
        <a href="{{href}}" class="nav-link">{{text}}</a>
      </div>
      {{/each}}
    </div>
    {{/with}}
  </div>

  <h1>{{header}}</h1>

  <div class="row">

    <div class="col-8">

      {{#with contacts_data}}

      <h2>{{title}}</h2>

      <div>
        {{#each buttons}}

        {{#if isPrimary}}<a class="btn btn-warning">{{text}}</a>{{/if}}
        {{#if isOutline}}<a class="btn btn-outline-warning">{{text}}</a>{{/if}}

        {{/each}}

        {{#with form}}

        <div class="row">

          {{#with input}}

          <div class="col-6">
            {{#with surname}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form-text">{{caption}}
            </div>
            {{/with}}
          </div>

          <div class="col-6">
            {{#with name}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form-text">{{caption}}
            </div>
            {{/with}}
          </div>

          <div class="col-6">
            {{#with phone}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form-text">{{caption}}
            </div>
            {{/with}}
          </div>

          <div class="col-6">
            {{#with email}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form-text">{{caption}}
            </div>
            {{/with}}
          </div>

          {{/with}}

          <hr>

          {{#each switch}}
          <div class="col-12">
            <div class="form-check form-switch">
              {{#if isActive}}
              <label class="form-check-label">{{text}}</label>
              <input class="form-check-input" type="checkbox">
              {{else}}
              <label class="form-check-label">{{text}}</label>
              <input class="form-check-input" type="checkbox" checked>
              {{/if}}
            </div>
          </div>
          {{/each}}

        </div>
        {{/with}}
        {{/with}}
        {{#with delivery}}
        <h2>{{title}}</h2>
        <div class="card">
          <div class="row">
            {{#each select}}
            <div class="col-6">


              <label class="form-label">{{label}}</label>
              <select class="form-select" multiple size="1">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
              </select>


            </div>
            {{/each}}



          </div>
        </div>
        <div class="col-12">
          {{#each delivery_type}}
          <div class='form-check'>
            <input class="form-check-input" name="name" type="radio" checked>
            <label class="form-check-label">{{type}}</label>
          </div>
          {{/each}}
        </div>

        <hr>

        <div class="col-12">
          {{#with payment}}

          <h2>{{title}}</h2>

          {{#each list}}
          <div class='form-check'>
            <input class="form-check-input" name="name" type="radio" checked>
            <label class="form-check-label">{{type}}</label>
            <div class="form-text">{{description}}</div>
          </div>
          {{/each}}

          {{/with}}
        </div>

        <hr>
        <div class="col-12">

          {{#with contact}}

          <h2>{{title}}</h2>
          <div class="row">
            <div class="col-6">
              {{#with surname}}
              <label class="form-label">{{label}}</label>
              <input class="form-control" placeholder="{{placeholder}}">
              <div class="form-text">{{caption}}
              </div>
              {{/with}}
            </div>

            <div class="col-6">
              {{#with name}}
              <label class="form-label">{{label}}</label>
              <input class="form-control" placeholder="{{placeholder}}">
              <div class="form-text">{{caption}}
              </div>
              {{/with}}
            </div>

            <div class="col-6">
              {{#with phone}}
              <label class="form-label">{{label}}</label>
              <input class="form-control" placeholder="{{placeholder}}">
              <div class="form-text">{{caption}}
              </div>
              {{/with}}
            </div>

            <div class="col-6">
              {{#with email}}
              <label class="form-label">{{label}}</label>
              <input class="form-control" placeholder="{{placeholder}}">
              <div class="form-text">{{caption}}
              </div>
              {{/with}}
            </div>
          </div>
          {{/with}}

        </div>

        <hr>
        {{#with coment}}
        <div class="col-12">

          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">

        </div>
        {{/with}}
        {{/with}}
      </div>
      <hr>
      <div class="col-12">
        {{#with coupon}}
        <h2>{{title}}</h2>
        {{#with select}}
        <div>
          {{#with availabel_coupon}}
          <label class="form-label">{{label}}</label>
          <select class="form-select form-select-lg" multiple size="1">
            <option selected>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
          </select>
          {{/with}}
          {{#with friend_coupon}}
          <label class="form-label">{{label}}</label>
          <select class="form-select form-select-sm" multiple size="1">
            <option selected>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
          </select>
          <div class="form-text">Caption text, description, error notification</div>
          {{/with}}
        </div>
        {{/with}}

        {{#with add}}
        <div class="col-12">

          {{#with friend}}
          <label class="form-label ">{{label}}</label>
          <input class="form-control form-control-lg" placeholder="{{placeholder}}">
          <div class="form-text">{{caption}}</div>
          {{/with}}
          {{#with colleague}}
          <label class="form-label">{{label}}</label>
          <input class="form-control form-control-sm" placeholder="{{placeholder}}">
          <div class="form-text">{{caption}}</div>
          {{/with}}


        </div>
        {{/with}}

        {{/with}}

        <hr>

        <div class="col-12">
          {{#with quiz}}
          <h2>{{title}}</h2>
          {{#with preference}}
          <h4>{{title}}</h4>
          {{#each options}}
          <div class='form-check'>

            <input class="form-check-input" type="radio">

            <label class="form-check-label">{{this}}</label>

          </div>
          {{/each}}

          {{/with}}
          {{#with your_expirience}}
          <label class="form-label">{{label}}</label>
          <input class="form-control">
          {{/with}}
          {{#with purchase_frequency}}
          <label class="form-label">{{label}}</label>
          <select class="form-select form-select-lg" multiple size="1">
            <option selected>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
          </select>
          {{/with}}
          {{#with factors}}
          <h4>{{title}}</h4>
          {{#each options}}
          <div class='form-check'>
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label">{{this}}</label>
          </div>
          {{/each}}
          {{/with}}
          {{/with}}

        </div>
      </div>

    </div>

    <div class="col-4">
      <div class="row">
        <div class="card mb-2">
          {{#each action_block}}
          <div class="d-grip m-1">
            {{#if isSuccess}}
            <a class="btn btn-success">{{text}}</a>
            {{else isDanger}}
            <a class="btn btn-danger">{{text}}</a>
            {{else isInfo}}
            <a class="btn btn-info">{{text}}</a>
            {{/if}}
          </div>
          {{/each}}
        </div>

        <div class="card">
          {{#with total}}
          <h2>{{title}}</h2>
          {{#each item_list}}
          <div>{{name}}: {{price}}</div>
          {{/each}}
          <hr>
          {{#each additional_info}}
          <div>{{text}}: {{value}}</div>
          {{/each}}
          <hr>
          {{#with total_price}}
          <div>{{text}}: {{value}}</div>
          {{/with}}
          <hr>
          {{#each button}}
          <div class="d-grip p-1">
            {{#if isPrimary}}
            <a class="btn btn-primary">{{text}}</a>
            {{else isOutline}}
            <a class="btn btn-outline-primary">{{text}}</a>
            {{/if}}
          </div>
          {{/each}}
          {{/with}}
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    {{#each footer}}
    <div class="nav flex-column col-2">
      {{#each this}}
      <div class="nav-item">
        {{#if @last}}<a href="{{link}}" class="nav-link disabled">{{text}}</a>{{else}}<a href="{{link}}"
          class="nav-link">{{text}}</a>{{/if}}
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>
</main>