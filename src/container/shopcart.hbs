<main class="p-1">

  <div class="card">
    {{#with navigation}}
    <div class="nav">
      {{#each links}}
      <div class="nav-item">
        <a href="{{href}}" class="nav-link">{{text}}</a>
      </div>
      {{/each}}
    </div>
    {{/with}}
  </div>

  {{#with header}}
  <h2>{{title}}</h2>
  {{#with button}}
  <a class="btn btn-outline-secondary" href="{{link}}">{{text}}</a>
  {{/with}}
  {{/with}}
  <hr>
  <div>
    {{> cartGoodsItem}}
  </div>
  <hr>
  {{#with total}}
  <h2>{{title}}</h2>
  <div class="display-6">{{amount}}</div>
  <p>{{delivery}}</p>
  {{#each buttons}}
  <div class="py-3">
    {{#if isSuccess}}<a class="btn btn-success" href="{{link}}">{{text}}</a>{{/if}}
    {{#if isOutline}}<a class="btn btn-outline-success" href="{{link}}">{{text}}</a>{{/if}}
  </div>
  {{/each}}
  {{/with}}
  <hr>
  {{#with goodsOtherBlock}}
  <h2 class="text-center">{{title}}</h2>
  <div class="row">
    {{#each cards}}
    <div class="col-4">
      <div class="card">
        <img class="card-img-top" src="{{image}}">
        <div class="card-body">

          <h2 class="card-title">{{title}}
            {{#if isHot}} <span class="badge bg-warning rounded-pill text-uppercase">hot!</span> {{/if}}
            {{#if isNew}} <span class="badge bg-info rounded-pill text-capitalize">нове</span> {{/if}}
          </h2>
          <p class="card-text">{{description}}</p>

        </div>
      </div>
    </div>
    {{/each}}
  </div>

  {{/with}}
  <hr>
  {{#with subscribe}}
  <div class="card text-bg-dark p-2">
    <h2>{{header}}</h2>
    <p>{{description}}</p>
    {{#each buttons}}
    <div class="m-2">
      <a class="btn btn-primary" href="{{link}}">{{text}}</a>
    </div>
    {{/each}}
  </div>
  {{/with}}
  <hr>
  <div class="row">
    {{#each footer}}
    <div class="nav flex-column col-2">
      {{#each this}}
      <div class="nav-item">
        {{#if @last}}<a href="{{link}}" class="nav-link disabled">{{text}}</a>{{else}}<a href="{{link}}"
          class="nav-link">{{text}}</a>{{/if}}
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>
</main>