<main class="p-3">

  <div class="card">
    {{#with navigation}}
    <div class="nav">
      {{#each links}}
      <div class="nav-item">
        <a href="{{href}}" class="nav-link">{{text}}</a>
      </div>
      {{/each}}
    </div>
    {{/with}}
  </div>

  <nav aria-label="breadcrumb">

    <ol class="breadcrumb">
      {{#each breadcrumb}}
      {{#if @last}}<li class="breadcrumb-item active" aria-current="page"><a href={{url}}>{{name}}</a></li>
      {{else}}<li class="breadcrumb-item"><a href={{url}}>{{name}}</a></li>
      {{/if}}

      {{/each}}
    </ol>

  </nav>

  <h1>{{header}}</h1>

  <div class="row">
    {{#each sortBlock}}
    <div class="col-3">

      <select class="form-select" multiple size="1">

        <option selected>{{placeholder}}</option>
        {{#each options}}
        <option value="{{value}}">{{text}}</option>
        {{/each}}

      </select>

    </div>
    {{/each}}
  </div>
  <div class="row">
    <div class="col-4">
      {{#with filterBlock}}
      <div class="card p-2">
        {{#with sellers}}
        <h4>{{title}}</h4>
        {{#each list}}
        <div class='form-check'>
          <input class="form-check-input" name="name" type="checkbox">
          <label class="form-check-label">{{value}}</label>
        </div>
        {{/each}}
        {{/with}}
        <hr>
        {{#with brands}}
        <h4>{{title}}</h4>
        {{#with input}}
        <input class="form-control" placeholder="{{placeholder}}">
        {{/with}}
        {{#each options}}
        <div class='form-check'>
          <input class="form-check-input" name="name" type="checkbox">
          <label class="form-check-label">{{value}}</label>
        </div>
        {{/each}}
        {{/with}}
        <hr>
        {{#with price}}
        <h4>{{title}}</h4>
        {{#with range}}
        <input class="form-control m-2" placeholder="{{from}}">
        <input class="form-control m-2" placeholder="{{to}}">
        {{/with}}
        {{#with button}}
        <div>
          <a class="btn btn-outline-secondary">{{text}}</a>
        </div>
        {{/with}}
        {{/with}}
        <hr>
        {{#each filterList}}
        <h4>{{title}}</h4>
        {{#each options}}
        <div class='form-check'>
          <input class="form-check-input" name="name" type="checkbox">
          <label class="form-check-label">{{value}}</label>
        </div>
        {{/each}}
        <hr>
        {{/each}}

      </div>
      {{/with}}
    </div>

    <div class="col-8">

      <div class="row">
        {{#each goodsList}}
        {{> catalogItem}}
        {{/each}}
      </div>


    </div>

    <hr>
    {{#with service}}
    <div class="card">
      <div class="card-body text-bg-success text-center">
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        {{#each buttons}}
        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
        {{/each}}
      </div>
    </div>
    {{/with}}



    <hr>
    <div class="row">
      {{#each footer}}
      <div class="nav flex-column col-2">
        {{#each this}}
        <div class="nav-item">
          {{#if @last}}<a href="{{link}}" class="nav-link disabled">{{text}}</a>{{else}}<a href="{{link}}"
            class="nav-link">{{text}}</a>{{/if}}
        </div>
        {{/each}}
      </div>
      {{/each}}
    </div>
</main>