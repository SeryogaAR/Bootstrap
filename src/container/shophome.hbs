<main>

  <div class="card">
    {{#with navigation}}
    <div class="nav">
      {{#each links}}
      <div class="nav-item">
        {{#if @last}}<a href="{{link}}" class="nav-link disabled">{{text}}</a>{{else}}<a href="{{link}}"
          class="nav-link">{{text}}</a>{{/if}}
      </div>
      {{/each}}
    </div>
    {{/with}}
  </div>
  {{#with newsBlock}}
  <h1 class="text-center">{{title}}</h1>

  <div class="row p-1">
    {{#each cards}}
    <div class="col-3 p-2">
      <div class="card">
        <div class="card-header text-bg-dark">
          {{title}}
          {{#if isTop}} <span class="badge bg-success rounded-pill">Нова</span> {{/if}}
          {{#if isNew}} <span class="badge bg-danger rounded-pill">Топ</span> {{/if}}
        </div>
        <div class="card-body text-bg-dark">
          <div>{{description}}</div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/with}}
  <hr>
  {{#with goodsBlock}}
  <div class="nav nav-tabs">
    {{#each tabs}}
    <div class="nav-item">
      {{#if isActive}}<a class="nav-link active">{{text}}</a>
      {{else}}
      {{#if isDisabled}}<a class="nav-link disabled">{{text}}</a>
      {{else}}<a class="nav-link">{{text}}</a>
      {{/if}}
      {{/if}}
    </div>
    {{/each}}
  </div>

  <div class="row">
    {{#each cards}}
    <div class="col-4 p-2">
      <img class="card-img-top" src="{{image}}">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            {{title}}
            {{#if isHot}} <span class="badge bg-warning rounded-pill text-uppercase">hot!</span> {{/if}}
            {{#if isNew}} <span class="badge bg-info rounded-pill text-capitalize">нове</span> {{/if}}
            <p>{{description}}</p>
          </div>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/with}}
  <hr>
  {{#with subscribe}}
  <div class="card">
    <div class="card-body text-bg-dark">
      <h2>{{header}}</h2>
      <p>{{description}}</p>
      {{#each buttons}}
      <button class="btn btn-primary m-1" href="{{link}}">{{text}}</button><br>
      {{/each}}
    </div>
  </div>
  {{/with}}
  <hr>
  {{#with service}}
  <div class="card">
    <div class="card-body text-bg-success text-center">
      <h2>{{title}}</h2>
      <p>{{description}}</p>
      {{#each buttons}}
      <a class="btn btn-primary" href="{{link}}">{{text}}</a>
      {{/each}}
    </div>
  </div>
  {{/with}}
  <hr>

  <div class="row">
    {{#each footer}}
    <div class="nav flex-column col-2">
      {{#each this}}
      <div class="nav-item ">
        {{#if @last}}<a href="{{link}}" class="nav-link disabled">{{text}}</a>{{else}}<a href="{{link}}"
          class="nav-link">{{text}}</a>{{/if}}
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>
</main>