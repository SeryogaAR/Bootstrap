{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-2">
    {{#with main}}
    <main>

        <section clas="m-2">
            {{> title data="Work History" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div class="m-2">
                            {{position}}
                        </div>

                        <div clas="m-2">
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (Ще працюю)
                            {{/if}}
                        </div>


                        <div class="m-2">
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                        </div>


                        <div class="m-2">
                            <strohg> Project ({{projectAmount}}) </strohg>
                        </div>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{#if url}}
                                    {{> link text=name href=url blank=true noLine=true}}
                                    {{else}}
                                    <b>{{name}}</b>
                                    {{/if}}

                                    <div>
                                        <p>{{about}}</p>
                                    </div>
                                    <div class="m-2">
                                        <em>Project stacks ({{stackAmount}})</em>
                                        {{#each stacks}}
                                        <ul>
                                            <li>{{name}}</li>
                                        </ul>
                                        {{/each}}
                                    </div>
                                    <div class="m-2">
                                        <em>Project awards</em>
                                        {{#each awards}}
                                        <ul>
                                            <li>{{name}}</li>
                                        </ul>
                                        {{/each}}
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>

                    </li>

                    {{/each}}
                </ul>
            </div>
        </section>

    </main>
    {{/with}}


</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}